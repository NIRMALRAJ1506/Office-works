@{
    ViewData["Title"] = "Add Reservation";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="AddReservation" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="startLocation">Start Location</label>
        <input type="text" class="form-control" id="startLocation" name="StartLocation" required />
    </div>
    <div class="form-group">
        <label for="endLocation">End Location</label>
        <input type="text" class="form-control" id="endLocation" name="EndLocation" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Reservation</button>
</form>

@if (Model != null)
{
    <h2>New Reservation Details:</h2>
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Start Location:</strong> @Model.StartLocation</p>
    <p><strong>End Location:</strong> @Model.EndLocation</p>
}
else
{
    <p>@ViewBag.Message</p>
}
