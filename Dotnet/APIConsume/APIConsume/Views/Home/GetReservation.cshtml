@{
    ViewData["Title"] = "Get Reservation";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="GetReservation" method="post">
    <div class="form-group">
        <label for="id">Reservation ID</label>
        <input type="number" class="form-control" id="id" name="id" required />
    </div>
    <button type="submit" class="btn btn-primary">Get Reservation</button>
</form>

@if (Model != null)
{
    <h2>Reservation Details:</h2>
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Start Location:</strong> @Model.StartLocation</p>
    <p><strong>End Location:</strong> @Model.EndLocation</p>
}
else
{
    <p>@ViewBag.Message</p>
}
